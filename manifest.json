{
  "manifest_version": 3,
  "name": "LinkedOut",
  "version": "1.0",
  "description": "Tired of 'I'm honored to announce...'? LinkedOut filters the fluff so you donâ€™t have to.",
  "permissions": ["storage", "activeTab", "scripting"],
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://www.linkedin.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}